{
  "expo": {
    "name": "Recall App",
    "slug": "recall-app",
    "version": "1.0.0",
    "orientation": "portrait",
    
    // 1. iOS and Default Icon
    "icon": "./assets/logo-recall-app.png",
    
    "scheme": "recallapp",
    "userInterfaceStyle": "automatic",
    
    // 2. Top-level Splash Config
    "splash": {
      "image": "./assets/logo-recall-app.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true
    },
    
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        
        // 3. FIX: Point this to YOUR logo, not the default assets/images one
        "foregroundImage": "./assets/logo-recall-app.png"
        
        // REMOVED "backgroundImage" to avoid conflicts if you don't have a specific bg image
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.sacubeli1001.recallapp"
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          // 4. FIX: Update the Plugin to use YOUR logo
          "image": "./assets/logo-recall-app.png", 
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      "expo-secure-store"
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "1e08bf81-ff6a-4221-96e5-2205ee0fa7bc"
      }
    }
  }
}